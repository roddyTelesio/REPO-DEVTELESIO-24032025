        <name>ConcatAgresseCCC</name>
        <dataType>String</dataType>
        <expression>&apos;- &apos; + {!get_CCC.Account__r.LongName__c} &amp; BR() &amp;
&apos;Whose head office is at, &apos;&amp; BR() &amp;
IF((ISNULL({!get_CCC.Account__r.BillingStreet}) || ISBLANK({!get_CCC.Account__r.BillingStreet})), &apos;&apos;, {!get_CCC.Account__r.BillingStreet} &amp; (&apos;, &apos;)) &amp; 
IF((ISNULL({!get_CCC.Account__r.BillingCity}) || ISBLANK({!get_CCC.Account__r.BillingCity})), &apos;&apos;, {!get_CCC.Account__r.BillingCity}&amp; (&apos;, &apos;)) &amp; 
